<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_green"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with back button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="←"
                android:textSize="24sp"
                android:textColor="@color/apple_text_primary"
                app:backgroundTint="@android:color/transparent"
                app:strokeWidth="0dp"
                app:cornerRadius="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Event Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/apple_text_primary"
                android:gravity="center"
                android:fontFamily="@font/product_sans" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Event Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Event Image -->
                <ImageView
                    android:id="@+id/event_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/green_background"
                    android:background="@drawable/glass_card_container" />

                <!-- Event Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Event Title -->
                    <TextView
                        android:id="@+id/event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recycle Challenge: Beat Heat!"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/apple_text_primary"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/product_sans" />

                    <!-- Event Description -->
                    <TextView
                        android:id="@+id/event_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Collect the recyclable materials in a week"
                        android:textSize="16sp"
                        android:textColor="@color/apple_text_secondary"
                        android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="4dp"
                        android:fontFamily="@font/product_sans" />

                    <!-- Event Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Points -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:text="🏆"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/event_points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="220 Points"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/sustainable_green"
                                android:fontFamily="@font/product_sans" />

                        </LinearLayout>

                        <!-- Participants -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:text="👥"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/event_participants"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120 Participants"
                                android:textSize="14sp"
                                android:textColor="@color/apple_text_secondary"
                                android:fontFamily="@font/product_sans" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Event Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:text="📅"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/event_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 March 2024"
                            android:textSize="14sp"
                            android:textColor="@color/apple_text_secondary"
                            android:fontFamily="@font/product_sans" />

                    </LinearLayout>

                    <!-- Event Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:text="📍"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/event_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Community Park"
                            android:textSize="14sp"
                            android:textColor="@color/apple_text_secondary"
                            android:fontFamily="@font/product_sans" />

                    </LinearLayout>

                    <!-- Join Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_join_event"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Join Event"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/sustainable_green"
                        app:cornerRadius="28dp"
                        android:fontFamily="@font/product_sans" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
