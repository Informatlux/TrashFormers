<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Event Image Placeholder -->
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/light_grey_card"
            android:layout_marginBottom="12dp" />

        <!-- Event Title -->
        <TextView
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recycle Challenge: Beat Heat!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/apple_text_primary"
            android:fontFamily="@font/product_sans"
            android:layout_marginBottom="8dp" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collect the recyclable materials in a week"
            android:textSize="14sp"
            android:textColor="@color/apple_text_secondary"
            android:fontFamily="@font/product_sans"
            android:layout_marginBottom="12dp" />

        <!-- Event Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/event_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="220 Points"
                android:textSize="12sp"
                android:textColor="@color/apple_text_primary"
                android:fontFamily="@font/product_sans" />

            <TextView
                android:id="@+id/event_participants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="120 Participants"
                android:textSize="12sp"
                android:textColor="@color/apple_text_primary"
                android:fontFamily="@font/product_sans"
                android:gravity="center" />

            <TextView
                android:id="@+id/event_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12 March 2024"
                android:textSize="12sp"
                android:textColor="@color/apple_text_primary"
                android:fontFamily="@font/product_sans"
                android:gravity="end" />

        </LinearLayout>

        <!-- Join Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_join_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Event"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/map_primary_green"
            app:cornerRadius="12dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
