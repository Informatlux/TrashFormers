<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/bot_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ai_chatbot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/bot_message_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/chatbot_bubble_bg"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/bot_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- The actual message text, which will be hidden while loading -->
        <TextView
            android:id="@+id/bot_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="This is a sample response from the AI." />

        <!-- FIX: This is the missing loading indicator.
             It's an ImageView that uses our animated drawable. -->
        <ImageView
            android:id="@+id/bot_loading_indicator"
            android:layout_width="48dp"
            android:layout_height="12dp"
            android:src="@drawable/anim_dots_loading"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>