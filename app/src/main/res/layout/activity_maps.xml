<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <!-- MapView -->
    <org.osmdroid.views.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Floating Search Bar and Chips -->
    <LinearLayout
        android:id="@+id/map_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="35dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <!-- Search Bar Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="8dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/maps_pin_icon"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/search_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginRight="10dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintEnabled="true">

                        <AutoCompleteTextView
                            android:id="@+id/search_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="Search..."
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:textColor="@color/map_text_primary"
                            android:textColorHint="#9E9E9E" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Smart Category Chips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:id="@+id/chip_eco_bins"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans"
                android:text="Eco-bins"
                app:chipIconEnabled="true"
                app:chipIconSize="18dp"
                app:chipIcon="@drawable/trash_icon"
                app:checkedIconVisible="false"
                android:layout_marginEnd="10dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Recycle Centers"
                android:background="@color/white"
                android:id="@+id/chip_recycle_centers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans"
                app:chipIconEnabled="true"
                app:chipIconSize="18dp"
                app:chipIcon="@drawable/recycle_icon"
                app:checkedIconVisible="false"
                android:layout_marginEnd="10dp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans"
                android:id="@+id/chip_e_waste"
                app:chipIconEnabled="true"
                app:chipIconSize="18dp"
                android:text="E-waste"
                app:chipIcon="@drawable/electronics_icon"
                app:checkedIconVisible="false" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Sheet: Draggable -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        android:layout_marginBottom="80dp"
        android:padding="16dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="275dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <View
            android:id="@+id/bottom_sheet_handle"
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/handle_bar_shape" />


        <!-- Sheet Title + Subtitle (moves with bottom sheet) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="0dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <TextView
                android:id="@+id/bottom_sheet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans"
                android:text="TrashFormers Maps"
                android:textColor="@color/map_text_primary"
                android:textSize="21sp"
                android:textStyle="bold" />


        </LinearLayout>

        <!-- Location Info Header -->
        <!-- Location Info Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/trash_bin_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Main Location Name -->
                    <TextView
                        android:id="@+id/location_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans"
                        android:text="Jalan Taman Daya - 06 Street"
                        android:textColor="@color/map_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Sub-info line with ID and Capacity -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/tag_icon"
                            app:tint="@color/map_text_secondary" />

                        <TextView
                            android:id="@+id/location_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/product_sans"
                            android:text="FXJD194XC"
                            android:textColor="@color/map_text_secondary"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/dot_separator_icon" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/trash_icon"
                            app:tint="@color/map_text_secondary" />

                        <TextView
                            android:id="@+id/location_capacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/product_sans"
                            android:text="47% Capacity"
                            android:textColor="@color/map_text_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/location_duration"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/product_sans"
                        android:textColor="@color/map_primary_green"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="15 min"
                        android:gravity="center" />
                </com.google.android.material.card.MaterialCardView>




            </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_direction"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/product_sans"
                android:text="Directions"
                android:textColor="@color/map_text_primary"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:icon="@drawable/path_icon"
                app:iconTint="@color/map_text_primary"
                app:strokeColor="@color/map_info_box_stroke" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_report_issue"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/product_sans"
                android:text="Report Issue"
                android:textColor="@color/map_text_primary"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:icon="@drawable/info_icon"
                app:iconTint="@color/map_text_primary"
                app:strokeColor="@color/map_info_box_stroke" />
        </LinearLayout>

        <!-- Information Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/info_box_background"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/info_icon"
                app:tint="@color/map_text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans"
                android:lineSpacingExtra="4dp"
                android:text="Different types of garbage, including household waste, industrial waste, and hazardous waste."
                android:textColor="@color/map_text_secondary"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Put Garbage Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_put_garbage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/product_sans"
            android:text="Put Garbage"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="16dp" />
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_nav_background"
        app:itemIconSize="20dp"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
