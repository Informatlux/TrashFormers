<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/user_message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_user_bubble_bg"
        android:fontFamily="@font/product_sans"
        android:padding="16dp"
        android:text="Describe to me the basic principles of healthy eating. Briefly, but with all the important aspects, please."
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/user_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/user_message_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/user_message_text"
        app:layout_constraintStart_toStartOf="@id/user_message_text"
        app:layout_constraintEnd_toEndOf="@id/user_message_text" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/profile_placeholder_icon"
        app:layout_constraintBottom_toBottomOf="@id/user_message_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>