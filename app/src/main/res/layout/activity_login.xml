<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f5ea"
    tools:context=".LoginActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/glass_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="2dp"
        app:strokeColor="#6641682c">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/glass_morphism_background"
                android:padding="24dp">

                <!-- ... Your Toggle and Title here ... -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggle_button_group"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    app:checkedButton="@id/button_sign_up"
                    android:fontFamily="@font/product_sans"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_sign_up"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/product_sans"
                        android:layout_height="wrap_content"
                        android:text="Sign up"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/switch_background_tint"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_sign_in"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans"
                        android:text="Sign in"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/switch_background_tint"
                        app:strokeWidth="0dp" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans"
                    android:layout_marginTop="32dp"
                    android:text="Create an account"
                    android:textColor="#41682c"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/toggle_button_group" />


                <!-- Name Fields -->
                <LinearLayout
                    android:id="@+id/layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_title">

                    <!-- FIX: FIRST NAME TEXTBOX -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:hint="First name"
                        app:boxBackgroundColor="#1A41682c"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        android:textColorHint="@color/textfield_hint_color"
                        app:hintTextColor="@color/textfield_hint_color"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.TextInputLayout.Rounded">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:fontFamily="@font/product_sans"
                            android:text=" "
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="#41682c"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- FIX: LAST NAME TEXTBOX -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        android:hint="Last name"
                        android:textColorHint="@color/textfield_hint_color"
                        app:hintTextColor="@color/textfield_hint_color"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxBackgroundColor="#1A41682c"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.TextInputLayout.Rounded">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:fontFamily="@font/product_sans"
                            android:paddingStart="16dp"
                            android:text=" "
                            android:paddingEnd="16dp"
                            android:textColor="#41682c"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- FIX: EMAIL TEXTBOX -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Enter your email"
                    android:textColorHint="@color/textfield_hint_color"
                    android:textDirection="locale"
                    app:boxBackgroundColor="#1A41682c"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintTextColor="@color/textfield_hint_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_name"
                    app:startIconDrawable="@drawable/email_icon_inset"
                    app:startIconScaleType="fitStart"
                    app:startIconTint="#41682c"
                    app:startIconTintMode="src_in">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:fontFamily="@font/product_sans"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="-20dp"
                        android:text=" "
                        android:textColor="#41682c"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <!-- Create Account Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_create_account"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#41682c"
                    android:fontFamily="@font/product_sans"
                    android:text="Create an account"
                    android:textAllCaps="false"
                    android:textColor="#f2f5ea"
                    app:cornerRadius="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_email" />

                <!-- ... Your Divider and Social Buttons here ... -->
                <LinearLayout
                    android:id="@+id/layout_divider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/product_sans"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_create_account">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.5"
                        android:background="#41682c" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:fontFamily="@font/product_sans"
                        android:text="OR SIGN IN WITH"
                        android:textColor="#41682c"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.5"
                        android:background="#41682c" />
                </LinearLayout>

                <!-- FIX: SOCIAL LOGIN BUTTONS -->
                <LinearLayout
                    android:id="@+id/layout_social"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_divider">

                    <!-- Google Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_google"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        app:backgroundTint="#1A41682c"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/google_icon"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@null"
                        android:layout_marginEnd="8dp" />

                    <!-- Microsoft Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_microsoft"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        app:backgroundTint="#1A41682c"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/microsoft_icon"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@null"
                        android:layout_marginEnd="8dp" />


                    <!-- Apple Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_apple"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        app:backgroundTint="#1A41682c"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/apple_icon"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/white"/>

                </LinearLayout>

                <!-- ... Your Terms and Service TextView here ... -->
                <TextView
                    android:id="@+id/text_terms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/product_sans"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:text="By creating an account, you agree to our Terms and Service"
                    android:textColor="#41682c"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_social" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>