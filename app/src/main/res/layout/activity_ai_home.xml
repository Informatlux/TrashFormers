<?xml version="1.0" encoding="utf-8"?>
<!-- Root ConstraintLayout named "main" for WindowInsets padding -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ai_background"
    tools:context=".AIActivity">

    <!-- Top Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_bold"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="8sp"
            android:text="AI Space"
            android:textColor="@color/ai_text_primary"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_new_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ai_text_primary"
            android:fontFamily="@font/product_sans_bold"
            android:paddingHorizontal="20dp"
            android:text="New Chat"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Search Bar -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:id="@+id/search_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:boxCornerRadiusBottomEnd="28dp"
        app:boxCornerRadiusBottomStart="28dp"
        app:boxCornerRadiusTopEnd="28dp"
        app:boxCornerRadiusTopStart="28dp"
        app:boxStrokeColor="@color/ai_card_border"
        app:boxStrokeWidth="1dp"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/search_icon"
        app:startIconTint="@color/ai_text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans"
            android:hint="Search"
            android:textColorHint="@color/ai_text_secondary" />

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/ai_tools_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/search_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_ai_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/product_sans_bold"
            android:text="AI Tools"
            android:textColor="@color/ai_text_primary"
            android:textSize="20sp" />


    </RelativeLayout>

    <!-- Carousel as HorizontalScrollView -->
    <HorizontalScrollView
        android:id="@+id/carousel_scroll_view"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="6dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/ai_tools_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/carousel_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ai_chatbot_card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/ai_card_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/ai_chatbot_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_bold"
                        android:text="AI Chatbot"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/ai_chatbot_description"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/product_sans"
                        android:text="General AI assistant for eco tips and questions."
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/ai_chatbot_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scan_images_card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/ai_card_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/scan_images_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_bold"
                        android:text="Scan Images"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/scan_images_description"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/product_sans"
                        android:text="Capture images to classify waste automatically."
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/scan_images_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/classify_waste_card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/ai_card_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/classify_waste_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_bold"
                        android:text="Classify Waste Items"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/classify_waste_description"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/product_sans"
                        android:text="AI-powered classification for better sorting."
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/classify_waste_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/decompostion_time_card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/ai_card_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/decompostion_time_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_bold"
                        android:text="Decomposition Time"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/decompostion_time_description"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/product_sans"
                        android:text="Estimate how long waste breaks down."
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/decompostion_time_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/smart_recycling_card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/ai_card_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/smart_recycling_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_bold"
                        android:text="Smart Recycling Suggestions"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/smart_recycling_description"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/product_sans"
                        android:text="Recommend centers and methods"
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/smart_recycling_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/waste_sorting_card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/ai_card_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/waste_sorting_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_bold"
                        android:text="Waste Sorting Assistance"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/waste_sorting_description"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/product_sans"
                        android:text="Help sorting waste into correct bins."
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/waste_sorting_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/electronics_card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/ai_card_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/electronics_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_bold"
                        android:text="E-Waste Identification"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/electronics_description"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/product_sans"
                        android:text="Identify and dispose electronics safely."
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/electronics_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ai_help_card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/ai_card_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/ai_help_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_bold"
                        android:text="AI Help and FAQs"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/ai_help_description"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/product_sans"
                        android:text="Chat with AI assistant for instant help."
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/ai_help_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/best_out_of_waste_card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/ai_card_background">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/best_out_of_waste_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/product_sans_bold"
                        android:text="DIY Craft Ideas"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/best_out_of_waste_description"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/product_sans"
                        android:text="Recommendation of best out of waste items."
                        android:textColor="@color/ai_text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/best_out_of_waste_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- History Section Header -->
    <RelativeLayout
        android:id="@+id/history_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/carousel_scroll_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/product_sans_bold"
            android:text="History"
            android:textColor="@color/ai_text_primary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btn_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/product_sans"
            android:text="See all"
            android:textColor="@color/ai_text_secondary"
            android:textSize="14sp" />

    </RelativeLayout>

    <!-- History List RecyclerView (optional if you want list inside layout) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/history_header"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/chat_history" />

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/bottom_nav_background"
        app:elevation="8dp"
        app:itemIconSize="20dp"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
