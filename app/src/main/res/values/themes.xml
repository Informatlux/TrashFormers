        <!-- Theme Colors (Suggestions based on Green and Blue preference) -->
        <color name="colorPrimary">@color/my_green_primary</color>
        <color name="colorPrimaryVariant">@color/my_teal</color> <!-- Or a darker shade of my_green_primary -->
        <color name="colorOnPrimary">#FFFFFF</color> <!-- White text on primary color -->

        <color name="colorSecondary">@color/my_blue_primary</color>
        <color name="colorSecondaryVariant">@color/my_sky_blue</color> <!-- Or a darker shade of my_blue_primary -->
        <color name="colorOnSecondary">#FFFFFF</color> <!-- White text on secondary color -->

        <color name="colorSurface">#FFFFFF</color> <!-- Or a light gray -->
        <color name="colorOnSurface">#000000</color> <!-- Black text on surface -->
        <color name="colorBackground">#F0F0F0</color> <!-- Or another light neutral -->
        <color name="colorOnBackground">#000000</color> <!-- Black text on background -->
        <color name="colorError">@color/my_red</color>
